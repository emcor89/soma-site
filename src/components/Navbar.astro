---
import "../styles/global.css";
---
<header class="px-0 bg-white">
  <div class="fixed top-0 h-[90px] z-40 w-full bg-white">
  <div class="h-[85px] flex justify-between items-center px-8 py-4 w-full max-w-screen-lg mx-auto">
    <!-- Logo -->
    <div class="w-[216px] flex items-center">
      <img src="/img/logoMenu.png" alt="Soma Logo" />
    </div>

    <!-- Menú Desktop -->
    <ul class="hidden md:flex gap-8 items-center">
      <li class="text-base text-primario font-parrafos hover:text-primario-light transition"><a href="#">Soma</a></li>
      <li class="text-base text-primario font-parrafos hover:text-primario-light transition"><a href="#nosotros">Nosotros</a></li>
      <li class="text-base text-primario font-parrafos hover:text-primario-light transition"><a href="#servicios">Servicios</a></li>
      <li class="text-base text-primario font-parrafos hover:text-primario-light transition"><a href="#contacto">Contacto</a></li>
      <!-- Icono de Instagram Desktop -->
      <li class="text-base">
        <a href="https://www.instagram.com/mipatria_ec/" target="_blank" rel="noopener noreferrer" class="text-primario hover:text-primario-light transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2Zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5Zm4.25 3.25a5.5 5.5 0 1 1 0 11a5.5 5.5 0 0 1 0-11Zm0 1.5a4 4 0 1 0 0 8a4 4 0 0 0 0-8Zm5-1.1a1.1 1.1 0 1 1 0 2.2a1.1 1.1 0 0 1 0-2.2Z" />
          </svg>
        </a>
      </li>
    </ul>

    <!-- Botón hamburguesa Mobile -->
    <button id="menu-toggle" class="md:hidden text-primario">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Menú Mobile -->
  <ul
    id="menu-mobile"
    class="hidden md:hidden  flex-col bg-secundario mt-0 px-8 py-4 space-y-2 text-primario font-parrafos border-b border-secundario"
  >
    <li><a href="#" class="block py-2">Soma</a></li>
    <li><a href="#nosotros" class="block py-2">Nosotros</a></li>
    <li><a href="#servicios" class="block py-2">Servicios</a></li>
    <li><a href="#contacto" class="block py-2">Contacto</a></li>
    <!-- Icono de Instagram Mobile -->
    <li>
      <a href="https://www.instagram.com/mipatria_ec/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 py-2 text-primario hover:text-primario-light transition">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2Zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5Zm4.25 3.25a5.5 5.5 0 1 1 0 11a5.5 5.5 0 0 1 0-11Zm0 1.5a4 4 0 1 0 0 8a4 4 0 0 0 0-8Zm5-1.1a1.1 1.1 0 1 1 0 2.2a1.1 1.1 0 0 1 0-2.2Z" />
        </svg>
        <span>Instagram</span>
      </a>
    </li>
  </ul>
</div>
</header>



<script type="module">
  if (typeof window !== 'undefined') {
    const toggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("menu-mobile");

    toggle?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
    });
  }
</script>